<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#14ffffff"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    card_view:cardBackgroundColor="#80ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/employee_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя "
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/employee_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/employee_first_name"
            android:text="Профессия"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/employee_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_spec"
            android:layout_marginTop="2dp"
            android:text="Город"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/employee_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_city"
            android:layout_marginTop="2dp"
            android:text="Улица "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="23.08.2017"
            android:textColor="@color/colorPrimary" />
        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/employee_street"
            android:layout_alignParentEnd="true"
            android:numStars="5"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/yelow"
            android:rating="3"
            android:stepSize="0.5"
            android:theme="@style/RateView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>