<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/revUname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Имя "
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/revUname"
            android:text="Профессия: "
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView0"
            android:layout_below="@+id/textView0"
            android:text="Город: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:text="Адрес: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:text="Качество услуг"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="27dp"
            android:layout_marginTop="11dp"
            android:text="Коммуникация"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="Конфлиектность"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/revUSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/revUCity"
            android:layout_toEndOf="@+id/textView8"
            android:text="Электрик"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/revUCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/revUStreet"
            android:layout_alignStart="@+id/revUSpec"
            android:text="Томск"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/revUStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignStart="@+id/revUCity"
            android:text="ул.Пушкина, 77"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/revInfo"
            style="@style/FullWidthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="33dp"
            android:background="@drawable/rev_info"
            android:ems="10"
            android:inputType="none"

            android:text="Читал отзывы про мастера, соответствуют. Приехал в оговоренное время, со своим инструментом, разобрался в проблеме и отремонтировал диван. На диване можно сидеть, на такой результат и расчитывли. Мастер дал гарантию на работу." />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/revInfo"
            android:text="Автор:"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/revAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/textView4"
            android:text="автор" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView9"
            android:text="Дата отзыва:"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/revDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView8"
            android:text="01.01.01" />
        <RatingBar
            android:id="@+id/ratingBar1"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/revUStreet"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginStart="19dp"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/yelow"
            android:rating="3"
            android:stepSize="0.5" />
        <RatingBar
            android:id="@+id/ratingBar2"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_alignStart="@+id/ratingBar1"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/yelow"
            android:rating="3"
            android:stepSize="0.5" />
        <RatingBar
            android:id="@+id/ratingBar3"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/revInfo"
            android:layout_alignStart="@+id/ratingBar2"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/yelow"
            android:rating="3"
            android:stepSize="0.5" />
    </RelativeLayout>
</ScrollView>