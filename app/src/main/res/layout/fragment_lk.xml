<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <TextView
            android:id="@+id/Uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Имя "
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Uname"
            android:layout_marginStart="12dp"
            android:layout_marginTop="34dp"
            android:text="Профессия: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView0"
            android:layout_below="@+id/textView0"
            android:text="Город: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:text="Адрес: "
            android:textSize="12sp" />
        <TextView
            android:id="@+id/uAb_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="17dp"
            android:text="Обо мне:"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/uAb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/uAb_tv"
            android:layout_marginTop="17dp"
            android:text="Обо мне:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/uAb"
            android:layout_below="@+id/uAb"
            android:layout_marginTop="21dp"
            android:text="Средняя оценка:"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="16dp"
            android:text="Количество отзывов:"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/USpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/UCity"
            android:layout_toEndOf="@+id/textView0"
            android:text="Электрик"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/UCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView0"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/textView4"
            android:text="Томск"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/UStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UCity"
            android:layout_toEndOf="@+id/uAb"
            android:text="ул.Пушкина, 77"
            android:textSize="12sp" />
        <RatingBar
            android:id="@+id/uRate"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_alignEnd="@+id/Uname" />
        <TextView
            android:id="@+id/countRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/UStreet"
            android:text="2" android:textSize="12sp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_centerVertical="true"
            android:text="Отызвы:"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/countRev" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/revinfo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="2dp" />
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
</RelativeLayout>



