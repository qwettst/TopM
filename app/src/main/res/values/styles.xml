<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>
    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yelow</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <style name="RateView" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/yelow</item>
    </style>


    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">17dp</item>
    </style>
</resources>
